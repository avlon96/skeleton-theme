<section
  class="video-hero video-hero--fullscreen color-{{ section.settings.color_scheme }}"
  style="
    --overlay-opacity: {{ section.settings.overlay_opacity | divided_by: 100.0 }};
    --content-position: {{ section.settings.content_position }};
  "
>
  <div class="video-hero__media">
    {% assign show_video = true %}
    {% if section.settings.disable_mobile_video and request.design_mode == false %}
      <style>
        @media (max-width: 749px) {
          .video-hero__video { display: none; }
        }
      </style>
    {% endif %}

    {% if section.settings.video_url != blank %}
      <video
        class="video-hero__video"
        autoplay
        loop
        muted
        playsinline
        preload="metadata"
        {% if section.settings.poster != blank %}
          poster="{{ section.settings.poster | image_url: width: 2000 }}"
        {% endif %}
      >
        <source src="{{ section.settings.video_url }}" type="video/mp4">
      </video>
    {% endif %}

    {% if section.settings.poster != blank %}
      <img
        class="video-hero__poster"
        src="{{ section.settings.poster | image_url: width: 2000 }}"
        alt=""
        loading="lazy"
      >
    {% endif %}

    <div class="video-hero__overlay"></div>
  </div>

  <div
    class="page-width video-hero__content video-hero__content--{{ section.settings.text_alignment }}"
    data-position="{{ section.settings.content_position }}"
  >
    {% if section.settings.heading != blank %}
      <h1 class="video-hero__heading">
        {{ section.settings.heading }}
      </h1>
    {% endif %}

    {% if section.settings.subheading != blank %}
      <div class="video-hero__subheading rte">
        {{ section.settings.subheading }}
      </div>
    {% endif %}

    <div class="video-hero__buttons">
      {% if section.settings.button_label and section.settings.button_link %}
        <a class="button" href="{{ section.settings.button_link }}">
          {{ section.settings.button_label }}
        </a>
      {% endif %}

      {% if section.settings.button2_label and section.settings.button2_link %}
        <a class="button button--secondary" href="{{ section.settings.button2_link }}">
          {{ section.settings.button2_label }}
        </a>
      {% endif %}
    </div>
  </div>

  {% if section.settings.show_scroll_indicator %}
    <div class="video-hero__scroll-indicator">
      <span></span>
    </div>
  {% endif %}
</section>

{% schema %}
{
  "name": "Fullscreen video hero",
  "settings": [
    {
      "type": "url",
      "id": "video_url",
      "label": "Video URL (MP4 from Shopify Files)"
    },
    {
      "type": "image_picker",
      "id": "poster",
      "label": "Poster image (fallback / mobile)"
    },
    {
      "type": "checkbox",
      "id": "disable_mobile_video",
      "label": "Disable video on mobile",
      "default": true
    },
    {
      "type": "range",
      "id": "overlay_opacity",
      "min": 0,
      "max": 80,
      "step": 5,
      "unit": "%",
      "label": "Overlay opacity",
      "default": 35
    },
    {
      "type": "select",
      "id": "content_position",
      "label": "Content vertical position",
      "default": "center",
      "options": [
        { "value": "top", "label": "Top" },
        { "value": "center", "label": "Center" },
        { "value": "bottom", "label": "Bottom" }
      ]
    },
    {
      "type": "select",
      "id": "text_alignment",
      "label": "Text alignment",
      "default": "center",
      "options": [
        { "value": "left", "label": "Left" },
        { "value": "center", "label": "Center" },
        { "value": "right", "label": "Right" }
      ]
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading",
      "default": "Make your first impression unforgettable"
    },
    {
      "type": "richtext",
      "id": "subheading",
      "label": "Subheading",
      "default": "<p>Fullscreen video hero built for conversion.</p>"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Primary button label",
      "default": "Shop now"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Primary button link"
    },
    {
      "type": "text",
      "id": "button2_label",
      "label": "Secondary button label"
    },
    {
      "type": "url",
      "id": "button2_link",
      "label": "Secondary button link"
    },
    {
      "type": "checkbox",
      "id": "show_scroll_indicator",
      "label": "Show scroll indicator",
      "default": true
    },
    {
      "type": "color_scheme",
      "id": "color_scheme",
      "label": "Color scheme",
      "default": "background-1"
    }
  ],
  "presets": [
    {
      "name": "Fullscreen video hero"
    }
  ]
}
{% endschema %}
